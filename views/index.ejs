<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
    <div class="col-12 col-lg-6">
        <img src="/img/hero-image.jpg" width="607" height="510" class="d-block mx-lg-auto img-fluid" loading="lazy"
            alt="Cooking with love">
    </div>

    <div class="col-12 col-lg-6">
        <h1 class="display-5 fw-bold mb-3"> Great selection of delicious and personal favourite recipe ideas</h1>
        <p class="lead">Explore my own digital cookbook that consists of delicious recipe ideas such as easy desserts,
            gorgeous pasta recipes, family-friendly and international meals.</p>

        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <a href="/explore-latest" class="btn btn-primary btn-dark btn-large px-4 me-md-2">Explore latest recipe</a>
            <a href="/random-recipe" class="btn btn-outline-secondary btn-large px-4 me-md-2">Not sure? Let me pick a
                recipe for you</a>
        </div>

    </div>
</div>

<!-- Categories Start -->

<div class="row row-cols-8 row-cols-lg-8 g-2 g-lg-3 py-4">
<h2> Categories</h2>
    <% if(categories !='' ) { %>
        <% categories.forEach(function(category, index){ %>

            <a href="/categories/<%- category.name %>" class="col text-center category__link">
                <div class="category__img shadow">
                    <img src="img/<%- category.image %>" alt="<% category.name %>" loading="lazy">
                </div>
                <div class="pt-1"><%- category.name %></div>
            </a>
            <% }) %>
                <% } %>

                    <a href="/categories" class="col text-center category__link">
                        <div class="category__img shadow">
                            <img src="img/view-all.jpg" alt="View All Categories" loading="lazy">
                        </div>
                        <div class="pt-1">View all recipes</div>
                    </a>

</div>

<!-- Categories End -->

<!-- Latest Start -->


<section class="pb-4 pt-4">
    <div class="d-flex mb-2 align-items-center">
        <h2>Latest Recipes</h2>
        <a href="/explore-latest" class="ms-auto">View More</a>
    </div>

    <div class="row row-cols-4 row-cols-lg-4 g-2 g-lg-3">
        <% if(food != '') { %>
            <% food.latest.forEach(function(recipe, index){ %>


        <a href="/recipe/<%=recipe._id%>" class="col text-center category__link">
            <div class="category__img category__img--large shadow">
                <img src="uploads/<%=recipe.image%>" alt="<%=recipe.name%>" loading="lazy">
            </div>
            <div class="pt-1"><%=recipe.name%></div>
        </a>
        <%  }) %>
        <%}%>
    </div>

</section>


<!-- Latest End -->


<!-- Add Recipe Start -->

<section class="px-4 py-5 my-5 text-center">
    <img src="/img/publish-recipe.jpg" class="d-block mx-auto mb-4 img-fluid" alt="Add Recipe" width="566" height="208"
        loading="lazy">
    <h1 class="display-5 fw-bold"> Add Recipe</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead mb-4">
            Craft a new recipe, infuse it with your unique flavors, and guide others through your kitchen secrets. Let them savor and enjoy your delicious creations!
        </p>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a href="/add-recipe" class="btn btn-primary btn-dark btn-lg">Add Recipe</a>
        </div>
    </div>

</section>



<!-- Add Recipe End -->