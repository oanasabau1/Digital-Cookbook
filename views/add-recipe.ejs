<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold"> Add Recipe</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead">I was feeling motivated and creative, so I just expanded my cookbook with another recipe!</p>
    </div>
</div>



<div class="row justify-content-center">

  <% if(infoSubmitObj != '') { %>
    <div class="col-8 alert alert-success" role="alert">
       <%= infoSubmitObj %>
      </div>
    <% } %>
    
    <% if(infoErrorsObj != '') { %>
        <div class="col-8 alert alert-danger" role="alert">
           <%= infoErrorsObj %>
          </div>
        <% } %>
    <div class="col-8">

        <form action="/add-recipe" enctype="multipart/form-data" method="POST">


            <div class="row g-3">

                <div class="col-12">
                    <label for="name" class="form-label">Recipe Name</label>
                    <input type="text" name="name" id="name" class="form-control" required>
                  </div>
                  
                  <div class="col-12">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="description" id="description" class="form-control" cols="30" rows="4"></textarea>
                  </div>
          
                  <div class="col-12">
                    <label for="name" class="form-label">Ingredients</label><br>
                    <small>Example: Sugar</small>
                    <div class="ingredientList">
                      <div class="ingredientDiv mb-1">
                        <input type="text" name="ingredients" class="form-control">
                      </div>
                    </div>
                  </div>
          
                  <div class="col-12">
                    <button type="button" class="btn btn-outline-dark" id="addIngredientsBtn">+ Ingredient</button>
                  </div>
          
                  <div class="col-12">
                    <label for="category">Select Category</label>
                    <select class="form-select form-control" name="category" aria-label="Category">
                      <option selected>Select Category</option>
                      <option value="American Food">American Food</option>
                      <option value="Asian Food">Asian Food</option>
                      <option value="Breakfast">Breakfast</option>
                      <option value="Dessert">Dessert</option>
                      <option value="Indian Food">Indian Food</option>
                      <option value="Italian Food">Italian Food</option>
                      <option value="Romanian Food">Romanian Food</option>
                    </select>
                  </div>
          
                  <div class="col-12">
                    <label for="image">Image</label>
                    <input type="file" class="form-control" name="image" accept="image/*">
                  </div>
          
                  <div class="col-12">
                    <button type="submit" class="btn btn-dark">Add Recipe</button>
                  </div>
          
                </div>
              
              </form>
          
            </div>
          </div>